# PBIHoster Environment Configuration
# Copy this file to .env and update with your production values

# ========================================
# JWT Configuration
# ========================================
# CRITICAL: Generate a strong random key (minimum 256 bits / 32 characters)
# Example: openssl rand -base64 32
JWT_KEY=change-this-to-a-secure-key-minimum-256-bits-long-for-production
JWT_ISSUER=ReportTree
JWT_EXPIRY_HOURS=8

# ========================================
# Password Policy
# ========================================
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_FAILED_ATTEMPTS=5
PASSWORD_LOCKOUT_MINUTES=15

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=true
# General API endpoints: 100 requests per minute
RATE_LIMIT_GENERAL=100
RATE_LIMIT_GENERAL_PERIOD=1m
# Auth endpoints: 5 requests per minute (prevents brute force)
RATE_LIMIT_AUTH=5
RATE_LIMIT_AUTH_PERIOD=1m

# ========================================
# CORS Configuration
# ========================================
# Add your frontend origins (comma-separated for multiple)
# Example: https://reports.example.com
CORS_ORIGIN_1=
CORS_ORIGIN_2=
CORS_ALLOW_CREDENTIALS=true
